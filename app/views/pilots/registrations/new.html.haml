.outer-scratch
  .innner-scratch
    .background
      .pilot-main.grain
        = form_with model: resource, as: resource_name, url: registration_path(resource_name), local:true do |f|
          = render "devise/shared/error_messages", resource: resource
          .text-input
            = f.email_field :email, autocomplete: "email"
            = f.label :email
            -# = f.label t(".email")
          .text-input
            = f.password_field :password,
              placeholder: "#{t(".minimum_password_length", count: @minimum_password_length) if @minimum_password_length}",
              autocomplete: "new-password"
            = f.label :password
          .text-input
            = f.password_field :password_confirmation, autocomplete: "new-password"
            = f.label :password_confirmation
          .text-input
            = f.text_field :first_name, autocomplete: "first_name"
            = f.label :first_name
          .text-input
            = f.text_field :last_name, autocomplete: "last_name"
            = f.label :last_name
          .regis-btn
            = f.submit t(".sign_up")
