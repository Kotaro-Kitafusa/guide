!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Guide
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.header
      .header__inside
        - if pilot_signed_in?
          %p
            Welcome,
            %span{style: "color: skyblue"}
              = current_pilot.email
            , you are a
            %span{style: "color: skyblue"}
              = current_pilot.status
          %span
            = link_to "logout", destroy_pilot_session_path, method: 'delete'
          %span
            = link_to "change your status", change_pilot_status_path
        - else
          %span{style: "color: skyblue"} Please, login or signup to login
          %span
            = link_to "signup", new_pilot_registration_path
          %span
            = link_to "login", new_pilot_session_path
        - if I18n.locale.to_s == "ja"
          %span
            = link_to "English", root_path("en")
        - else
          %span
            = link_to "日本語", root_path("ja")
    = yield
