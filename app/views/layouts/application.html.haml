!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Guide
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.header
      %ul.header__menu
        - if pilot_signed_in?
          %li.header__menu__lists
            = t(".welcome_user", user: current_pilot.email, status: current_pilot.status)
          %li.header__menu__lists
            = link_to t(".logout"), destroy_pilot_session_path, method: 'delete'
          %li.header__menu__lists
            = link_to "change your status", change_pilot_status_path
          = render "shared/i18n_check"
        - else
          %li.header__menu__lists
            %span
              = link_to t(".signup"), new_pilot_registration_path
          %li.header__menu__lists
            %span
              = link_to t(".login"), new_pilot_session_path
          = render "shared/i18n_check"
    = yield
