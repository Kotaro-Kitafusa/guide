%header.header
  %ul.header__menu
    - if pilot_signed_in?
      %li.header__menu__lists
        = link_to t(".go_top"), root_path
      %li.header__menu__lists
        - if current_pilot.pilot_type == "pilot"
          = t(".welcome_pilot", user:current_pilot.email)
        - elsif current_pilot.pilot_type == "traveller"
          = t(".welcome_traveller", user:current_pilot.email)
      %li.header__menu__lists
        = link_to t(".go_map"), map_index_path
      %li.header__menu__lists
        = link_to t(".logout"), destroy_pilot_session_path, method: 'delete'
      %li.header__menu__lists
        = link_to "change your type", change_pilot_type_path
      = render "shared/i18n_switch_langugage"
    - else
      %li.header__menu__lists
        %span
          = link_to t(".signup"), new_pilot_registration_path, class: "animsition-link"
      %li.header__menu__lists
        %span
          = link_to t(".login"), new_pilot_session_path, class: "animsition-link"
      = render "shared/i18n_switch_langugage"